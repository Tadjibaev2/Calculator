<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/green"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAc"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginLeft="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/red"
                android:text="AC"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonSkobki"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:text="()"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonPercent"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:text="%"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonDelet"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:onClick="operator"
                android:text="/"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button7"
                android:layout_marginLeft="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button8"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button9"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonUmnoj"

                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:text="*"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button4"
                android:layout_marginLeft="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button5"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button6"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonMinus"

                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:text="-"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button1"
                android:layout_marginLeft="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button2"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button3"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonPlus"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:text="+"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button0"
                android:layout_marginLeft="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="clickNumber"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonTochka"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:text=","
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonBack"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/orange"
                android:text="ret"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonRavno"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blueGrey"
                android:text="="
                android:textSize="25dp" />

        </TableRow>
    </TableLayout>


</LinearLayout>